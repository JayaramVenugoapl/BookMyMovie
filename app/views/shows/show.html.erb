<header class="jumbotron text-center py-8 mb-4"
  style="background-image: url(<%= @movie.poster_url %>);background-size: auto;">
</header>

<main role="main" class="container">
  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-secondary rounded box-shadow">
    <%= image_tag  @movie.poster_url, class:"mr-3", alt:"", width:"48", height:"48"%>
    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100"><%= @movie.name_with_certificate %></h6>
      <small><%= @movie.release_dates %></small>
    </div>
  </div>
  <div class="my-3 p-3 bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">Theaters & Show Timings</h6>
    <% @movie.shows.each do |show| %>
    <div class="media text-muted pt-3">
      <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <h6 class="text-gray-dark"><%= show.theater.name %></h6>
          <div>
            <% if show.night %>
            <a href="/shows/<%= show.theater.id %>/seating?timing=<%= show.night %>"
              class="btn btn-sm btn-outline-primary mr-2 float-lg-right">10.00 PM</a>
            <% end %>
            <% if show.evening %>
            <a href="/showss/<%= show.theater.id %>/seating?timing=<%= show.evening %>"
              class="btn btn-sm btn-outline-primary mr-2 float-lg-right">05.00 PM</a>
            <% end %>
            <% if show.matinee %>
            <a href="/shows/<%= show.theater.id %>/seating?timing=<%= show.matinee %>"
              class="btn btn-sm btn-outline-primary mr-2 float-lg-right">02.00 PM</a>
            <% end %>
            <% if show.morning %>
            <a href="/shows/<%= show.theater.id %>/seating?timing=<%= show.morning %>"
              class="btn btn-sm btn-outline-primary mr-2 float-lg-right">10.30 AM</a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</main>